<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        tools:context=".DashActivity">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="614dp"
            android:background="@drawable/curve"
            android:backgroundTint="@color/colorPrimary"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tvname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="80dp"
                android:paddingLeft="5dp"
                android:text="Name"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/etuser"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/tvname"
                android:textColor="#eee"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etuser"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:text="User Id"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/etuserid"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/tvuser"
                android:textColor="#eee"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etuserid"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:text="Email"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/etemail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/tvemail"
                android:layout_marginTop="0dp"
                android:textColor="#eee"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvmob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etemail"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:text="Mobile Number"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/etmob"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/tvmob"
                android:textColor="#eee" />

            <TextView
                android:id="@+id/cgpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ll"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="20dp"
                android:alpha="0"
                android:enabled="false"
                android:text="Change Password"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />


            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/update"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_gravity="start"
                    android:text="Update"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    android:tooltipText="Click me to Complete Your profile" />

                <Button
                    android:id="@+id/save"
                    style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="85dp"
                    android:alpha="0"
                    android:enabled="false"
                    android:text="Save"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileimg"
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:elevation="20dp"

            android:src="@drawable/ic_face_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_optimizationLevel="standard" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>